<?xml version='1.0' encoding='utf-8'?>
<widget id="com.skyexplorer.todayluck" version="0.0.4" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0" android-versionCode="4">
    <name>Today Luck</name>
    <description>
        Luck Today
    </description>
    <author email="dev@cordova.apache.org" href="http://cordova.io">
       Sky Explorer
    </author>
    <content src="index.html" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
	
	 <icon src="icon.png"/>
	  
    <platform name="android">
        <preference name="android-minSdkVersion" value="14" />
        <allow-intent href="market:*" />
		
		    <icon src="www/res/icon/android/icon-36-ldpi.png" density="ldpi"/>
			<icon src="www/res/icon/android/icon-48-mdpi.png" density="mdpi"/>
			<icon src="www/res/icon/android/icon-72-hdpi.png" density="hdpi"/>
			<icon src="www/res/icon/android/icon-96-xhdpi.png" density="xhdpi"/>
			<icon src="www/res/icon/android/icon-144-xxhdpi.png" density="xxhdpi"/>
			<icon src="www/res/icon/android/icon-192-xxxhdpi.png" density="xxxhdpi"/>
			<feature name="SocialSharing">
			  <param name="android-package" value="nl.xservices.plugins.SocialSharing" />
			</feature>
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
        <preference name="BackupWebStorage" value="none" />
		<feature name="SocialSharing">
		  <param name="ios-package" value="SocialSharing" />
		</feature>
    </platform>
	
	 
	  <platform name="wp8">

	  </platform>
	  <platform name="windows">
	   </platform>
    <preference name="DisallowOverscroll" value="true" />
	<preference name="loadUrlTimeoutValue" value="700000" />
	<preference name="fullscreen" value="true" />

    <plugin name="cordova-plugin-whitelist" spec="~1.2.0" />
    <plugin name="cordova-plugin-statusbar" spec="~1.0.1" />
	<plugin name="cordova-admob" />
	<plugin name="cordova-plugin-inappbrowser" />
	<plugin name="cordova-plugin-x-socialsharing" />

	
</widget>
